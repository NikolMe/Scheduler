@model Scheduler.Models.Place

@{
    ViewData["Title"] = "Створення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Створення</h1>

<h4>Місце</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Дата</label>
                <input asp-for="Time" class="form-control"/>
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsSelected"/> @Html.DisplayNameFor(model => model.IsSelected)
                </label>
            </div>
            <div class="form-group">
                <label class="control-label">Ім'я</label>
                <input asp-for="ClientName" class="form-control"/>
                <span asp-validation-for="ClientName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Номер телефону</label>
                <input asp-for="ClientNumber" class="form-control"/>
                <span asp-validation-for="ClientNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Створити" class="btn btn-primary"/>
            </div>
            <div class="form-group">
                <label class="control-label">Кінець дня</label>
                <input asp-for="EndOfTheDay" class="form-control"/>
                <span asp-validation-for="EndOfTheDay" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}