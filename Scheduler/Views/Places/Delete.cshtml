@model Scheduler.Models.Place

@{
    ViewData["Title"] = "Видалення";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Видалення</h1>

<h3>Ви впевнені, що хочете видалити?</h3>
<div>
    <h4>Місце</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Time)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsSelected)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsSelected)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ClientNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ClientNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Service)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Service.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndOfTheDay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndOfTheDay)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id"/>
        <input type="submit" value="Delete" class="btn btn-danger"/> |
        <a asp-action="Index">Повернутися</a>
    </form>
</div>